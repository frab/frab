= simple_form_for(person, url: url) do |f|
  .card.shadow-sm.mb-4
    .card-header.d-flex.align-items-center
      %i.bi.bi-calendar-check.me-2
      %h5.mb-0= t('availability', default: 'Availability')
    .card-body
      - conference.days.each do |day|
        - availability = availabilities.select{ |a| a.day == day }.first
        - availability.nil? and availability = Availability.new(day: day, conference: conference)
        = render(partial: 'shared/availabilities_slider', locals: { f: f, day: day, availability: availability, conference: conference })
  
  - if policy(person).edit_availability?
    .card.border-0.mt-4
      .card-footer.bg-light.d-flex.gap-2
        = f.button :submit, t("cfp.save_availability"), class: 'btn btn-primary btn-lg'

