- conferences = Conference.creation_order.has_submission(current_user.person).limit(5)
- if conferences.to_a.count > 1
  %li.nav-item.dropdown
    = link_to "#", class: "nav-link dropdown-toggle", 'data-bs-toggle': 'dropdown', 'aria-expanded': 'false' do
      %i.bi.bi-window-stack
      = t("switch_conference", default: "Switch conference")
    %ul.dropdown-menu
      - conferences.each do |conference|
        - unless @conference == conference
          %li
            = link_to cfp_person_path(conference_acronym: conference.acronym), class: 'dropdown-item' do
              = conference.acronym

