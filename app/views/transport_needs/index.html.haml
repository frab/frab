%section
  .page-header
    .float-end
    %h1= t('titles.person', person: @person.full_name)
  = render 'shared/people_tabs'

  - if @transport_needs.any?
    %table.table.table-striped
      %thead
        %tr
          %th= t('transport_needs_module.when')
          %th= t('type')
          %th= t('transport_needs_module.nb_seats')
          %th= t('transport_needs_module.booked_question')
          %th= t('note')
          %th
      %tbody
        - @transport_needs.each do |tn|
          %tr
            %td= tn.at.to_formatted_s(:long)
            %td= tn.transport_type
            %td= tn.seats
            %td= t_boolean(tn.booked)
            %td= tn.note
            %td
              =action_button '<i class="bi bi-pencil-square"></i> '.html_safe + t('edit'), edit_person_transport_need_path(@person, tn), class: "btn btn-primary btn-sm"
              = delete_button person_transport_need_path(@person, tn), hint: t('destroy')

  =action_button '<i class="bi bi-plus-circle"></i> '.html_safe + t('transport_needs_module.new_transport_need'), new_person_transport_need_path, class: "btn btn-primary btn-sm"
