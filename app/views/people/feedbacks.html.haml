%section
  .page-header
    .float-end
      - if policy(@conference).manage?
        = action_button '<i class="bi bi-pencil-square"></i> '.html_safe + t('people_module.edit_person'), edit_person_path(@person), hint: t('people_module.edit_person_hint'), class: "btn btn-primary"
      - if policy(@conference).manage?
        = action_button '<i class="bi bi-plus-circle"></i> '.html_safe + t('people_module.add_person'), new_person_path, hint: t('people_module.add_person_hint'), class: "btn btn-primary"
    %h1= t('titles.person', person: @person.full_name)
  = render 'shared/people_tabs'
  .row
    .col-md-12
      %h2= t('basic_information')
  .row
    .col-md-8
      %p
        %b= t('col_full_name')
        = @person.first_name
        = @person.last_name
      %p
        %b= t('col_public_name')
        = @person.public_name
    .col-md-4
      %p
        %b= t('col_email')
        = mail_to @person.email
        (#{@person.email_public? ? "public" : "non-public"})
    .col-md-4
      = image_box @person.avatar, :large
%section
  .row
    .col-md-12
      - unless @current_events.empty?
        %h2= t('events_module.events_in_current_conference')
        = render "feedback_table", collection: @current_events
      - unless @other_events.empty?
        %h2= t('events_module.events_in_other_conferences')
        = render "feedback_table", collection: @other_events
