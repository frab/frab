%section
  .page-header
    .pull-right
      - if policy(Conference).new?
        = action_button "primary", "Add conference", new_conference_path, hint: "Add a new conference"
    %h1= t('titles.conferences_index')
  - if params[:term].blank? and Conference.all.empty?
    .row
      .span16
        .blank-slate
          %p= t('conferences_module.no_conferences')

  - else
    = render 'shared/search_and_table', collection: @conferences
