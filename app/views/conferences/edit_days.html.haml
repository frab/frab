%section
  .page-header
    %h1= t :edit_conference_days
  = render partial: 'tabs', locals: { active: :days }

  - if @conference.parent
    .row
      .span16
        .blank-slate
          %p= t('days_module.inherited_conference_change', {parent: @conference.parent.title})

          %p= t('days_module.configured_days')

          %ul
            - @conference.days.each do |day|
              %li
                ="#{l day.start_date} - #{l day.end_date}"

  - else
    - if @conference.days.empty?
      .row
        .span16
          .blank-slate
            %p= t('days_module.empty_days')
    .row
      .span16
        = render 'form_days'
