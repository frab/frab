.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th.first
        - if @search
          %th= sort_link @search, :acronym, term: params[:term]
          %th= sort_link @search, :title, term: params[:term]
          %th= sort_link @search, :created_at, term: params[:term]
          %th= sort_link @search, :email, term: params[:term]
        - else
          %th= Conference.human_attribute_name('acronym')
          %th= t('title')
          %th= t('created_at')
          %th= t('email')
        %th.last
    %tbody
      - collection.each do |conference|
        %tr
          %td
          %td= conference.acronym
          %td= conference.title
          %td.text-nowrap= l(conference.created_at.to_date)
          %td= conference.email
          %td.text-nowrap
            .d-flex.flex-wrap.gap-2
              - if policy(conference).read?
                = action_button '<i class="bi bi-eye"></i> '.html_safe + t('show'), conference_path(conference_acronym: conference.acronym), class: "btn btn-primary btn-sm"
              - if policy(conference).destroy?
                = delete_button conference_path(conference_acronym: conference.acronym), hint: t('destroy')
