= semantic_form_for(@conference, :url => conference_path) do |f|
  - @conference.build_ticket_server unless @conference.ticket_server
  = f.semantic_fields_for :ticket_server do |ticket_server|
    = render 'ticket_server_fields', :f => ticket_server

  = f.buttons do
    = f.commit_button :button_html => {:class => "button", :icon => "tick"}
