%section
  .page-header
    .float-end
      = action_button '<i class="bi bi-person"></i> '.html_safe + t('users_module.edit_user_account'), edit_person_user_path(@person), hint: t('users_module.edit_user_account_hint'), class: "btn btn-primary"
    %h1= t('titles.person', person: @person.full_name)
  = render 'shared/people_tabs'
  .row
    .col-md-12
      %p
        %b= t('col_email_for_login')
        = @user.email
      %p
        %b= t('col_role')
        = @user.role
      -if @user.is_crew? and @user.conference_users.empty?
        %p= t('users_module.not_in_crew')

      -elsif @user.is_crew?
        %ul
          - @user.conference_users.each do |cu|
            %li= cu.conference.acronym + " - " + cu.role
      %p
        %b= t('col_last_login')
        = @user.last_sign_in_at
