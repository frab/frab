- content_for :title do
  = link_to t('page_titles.crew_users'), root_url, class: 'navbar-brand'

%section
  .page-header
    %h1= t('titles.crew_users')

  - if current_user.is_admin?
    %ul.nav.nav-tabs
      %li.nav-item
        = link_to t('crew_accounts'), conference_users_path, class: 'nav-link active'
      %li.nav-item
        = link_to t('admin_accounts'), admin_users_path, class: 'nav-link'

  .row

    - if @users.present?
      = render 'table', collection: @users
      - if @users.respond_to?(:total_pages) && @users.total_pages > 1
        .d-flex.justify-content-center.mt-3
          = will_paginate @users
