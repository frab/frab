%section
  .page-header
    %h1 Edit Call for Papers

  - if @conference.ticket_type == 'integrated'
    %ul.tabs
      %li= link_to "General", edit_call_for_participation_path
      %li.active= link_to "Notification text", edit_notification_call_for_participation_path

  .row
    .span6
      %h2 Possible variables
      %dl.dl-horizontal
        - Notification::VARIABLES.each do |key, desc|
          %dt= "#{desc}:"
          %dd= "%{#{key}}"

    .span16
      = render "notification_form", object: @notification