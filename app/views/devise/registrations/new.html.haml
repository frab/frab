- content_for :title do
  = link_to t('page_titles.signup'), root_url, class: 'navbar-brand'

%section
  .page-header
    %h1
      = t('titles.session_signup')
  .row
    .col-md-12

      =simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

        %div{class: "alert alert-danger alert-dismissible fade show", role: :alert}
          = render partial: 'devise/shared/error_messages', resource: resource

        = f.invisible_captcha :subtitle

        %fieldset.border.p-3.mb-4
          = f.input :email, required: true, autofocus: true, hint: t('col_email_for_login'), input_html: { autocomplete: "email" }

          - if @minimum_password_length
            = f.input :password, required: true, hint: t('inputs.hints.password_length', length: @minimum_password_length), input_html: { autocomplete: "new-password" }
          - else
            = f.input :password, required: true, input_html: { autocomplete: "new-password" }

          = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }

        = f.simple_fields_for :person do |f|
          = render partial: 'shared/people_registration_fields', locals: { person: resource.person, f: f }

        .actions
          = f.button :submit, class: 'btn btn-primary', value: t('session.signup')


= render 'devise/shared/links'
