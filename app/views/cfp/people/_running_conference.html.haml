- if @conference.schedule_open?
  %p= t('cfp.pages.conference_open_mode')


- if @person.events_in(@conference).size > 0
  - if @person.availabilities_in(@conference).count == 0
    %p=t("cfp.specify_availability")
    = action_button '<i class="bi bi-plus-circle"></i> '.html_safe + t("cfp.edit_availability"), new_cfp_person_availability_path, class: "btn btn-success"
    .clear
  %p=t("cfp.input_appreciation")
  = action_button '<i class="bi bi-plus-circle"></i> '.html_safe + t("cfp.submit_another_event"), new_cfp_event_path, class: "btn btn-success"
  = action_button '<i class="bi bi-plus-circle"></i> '.html_safe + t("cfp.join_event"), cfp_events_join_path, class: "btn btn-success"

- else
  %p=t("cfp.take_time_to_submit")
  = action_button '<i class="bi bi-plus-circle"></i> '.html_safe + t("cfp.submit_new_event"), new_cfp_event_path, class: "btn btn-success"
  = action_button '<i class="bi bi-plus-circle"></i> '.html_safe + t("cfp.join_event"), cfp_events_join_path, class: "btn btn-success"
  .clear
  %br
  %p=t("cfp.not_forget_personal_details")
  = action_button '<i class="bi bi-person"></i> '.html_safe + t("cfp.edit_profile"), edit_cfp_person_path, class: "btn btn-success"
