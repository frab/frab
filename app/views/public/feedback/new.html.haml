- content_for :title do
  = "Feedback | #{schedule_title}"

%h2.title= t '.feedback_for', title: @event.title

%p= t '.please_let_us_know'

= simple_form_for(@feedback, url: public_event_feedback_path(event_id: @event.id)) do |f|
  %fieldset.inputs
    = f.input :rating, as: :rating, label: t('.how_would_you_rate'), size: "lg"
    = f.input :comment, input_html: {rows: 4}, hint: t('.what_did_you_like')
  .actions
    = f.button :submit, t('.submit_feedback'), class: 'btn btn-primary'
