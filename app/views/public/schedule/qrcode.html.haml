- content_for :title do
  = "#{t('public.schedule.nav.qrcode')} | #{schedule_title}"

.row.justify-content-center
  .col-12.col-md-8.col-lg-6
    .card.border-0.shadow-sm
      .card-header.bg-primary.text-white.text-center
        %h4.mb-0
          %i.bi.bi-qr-code.me-2
          = t('public.schedule.nav.qrcode')
      
      .card-body.text-center
        .mb-4
          %p.lead= t('.link_to_public_schedule')
        
        .qr.p-4.bg-light.rounded.d-inline-block
          = raw @qr.as_html
        
        .mt-4
          .small.text-muted
            %i.bi.bi-info-circle.me-1
            Scan this QR code with your mobile device to access the schedule
