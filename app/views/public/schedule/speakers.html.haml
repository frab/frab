- content_for :title do
  = "#{t('.speakers')} | #{schedule_title}"

.container-fluid
  .text-center.mb-5
    %h2.h3.fw-bold.mb-2.schedule-heading= t '.speakers'
    %p.schedule-text-muted= "Meet our conference speakers"
  
  / Speakers grid using Bootstrap 5 grid
  .row.g-4
    - @view_model.speakers.each do |speaker|
      .col-12.col-md-6.col-lg-4.col-xl-3
        .card.h-100.border-0.shadow-sm.speaker-card
          = link_to public_speaker_path(id: speaker.id), class: "text-decoration-none stretched-link" do
            .card-body.p-4
              .d-flex.align-items-start.mb-3
                .me-3.flex-shrink-0
                  - if speaker.avatar.present?
                    = image_box(speaker.avatar, :small, class: "rounded-circle", loading: "lazy", alt: "The speaker's profile picture")
                  - else
                    .bg-light.rounded-circle.d-flex.align-items-center.justify-content-center.avatar-placeholder
                      %i.bi.bi-person.text-muted{style: "font-size: 1.5rem;"}
                
                .flex-grow-1.min-w-0
                  %h5.card-title.mb-2.text-dark.fw-semibold= speaker.public_name
                  - if speaker.abstract.present?
                    %p.text-muted.small.mb-3
                      = truncate(speaker.abstract, length: 100, separator: ' ')
              
              - if speaker.public_and_accepted_events_as_speaker_in(@conference).any?
                .mt-auto
                  %h6.small.text-uppercase.text-muted.mb-2.fw-semibold= t '.events'
                  - speaker.public_and_accepted_events_as_speaker_in(@conference).each do |event|
                    .mb-1
                      %small.text-primary.fw-medium= event.title

