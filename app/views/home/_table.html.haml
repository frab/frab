%table.table.table-striped
  %thead
    %th.first
    %th= Day.human_attribute_name('start_date')
    %th= Conference.human_attribute_name('title')
    %th= t(:actions)
  %tbody
    - collection.each do |conference|
      %tr
        %td
          - if conference.logo.present?
            = image_box conference&.logo, :small
        %td
          = l(conference.start_date.to_date) unless conference.start_date.blank?
          \-
          = l(conference.end_date.to_date) unless conference.end_date.blank?
        %td= conference.title
        %td
          .d-flex.flex-wrap.gap-2
            - if show_cfp?(current_user, conference)
              = action_button '<i class="bi bi-person-plus"></i> '.html_safe + t('participate'), cfp_person_path(conference_acronym: conference.acronym), class: "btn btn-primary btn-sm"
            - elsif conference&.call_for_participation&.welcome_text.present?
              = action_button '<i class="bi bi-megaphone"></i> '.html_safe + t('activerecord.models.call_for_participation'), cfp_root_path(conference_acronym: conference.acronym), class: "btn btn-primary btn-sm"

            - if conference.schedule_public?
              = action_button '<i class="bi bi-calendar-event"></i> '.html_safe + t('schedule'), public_schedule_index_path(conference_acronym: conference.acronym), class: "btn btn-primary btn-sm"
            - if policy(conference).read?
              = action_button '<i class="bi bi-eye"></i> '.html_safe + t('show'), conference_path(conference_acronym: conference.acronym), class: "btn btn-sm btn-secondary"
